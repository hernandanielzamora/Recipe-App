<h1 class="title"> Add a new Recipe </h1>

<%= form_with model: @recipe, local: true do |f| %>
  <div class="field flex">
    <%= f.label :name, "Recipe Name" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field flex">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field flex">
    <%= f.label :preparation_time, "Prep Time (in hours)" %><br>
    <%= f.text_field :preparation_time %>
  </div>

  <div class="field flex">
    <%= f.label :cooking_time, "Cooking Time (in hours): " %><br>
    <%= f.text_field :cooking_time %>
  </div>

  <div class="field flex">
    <%= f.label :public, "Make the recipe public?" %><br>
    <%= f.select :public, options_for_select(['Yes', 'No']) %>
  </div>

  <div class="field flex">
    <%= f.submit "Add" %>
  </div>
<% end %>